<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="fourthyninetons.multilanguage.SummaryActivity">

    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="8dp"
        android:layout_marginTop="8dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:elevation="3dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            tools:context="fourthyninetons.multilanguage.SummaryActivity">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15dp"
                android:background="#ADD8E6"
                android:text="Route"
                android:drawableRight="@mipmap/ic_place_black_24dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="14dp"
                android:textColor="#bab8b8"
                android:text="Source" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:paddingLeft="@dimen/activity_horizontal_margin"

                android:textSize="14dp"
                android:textColor="#000"
                android:text="Image Gardens Road, Madhapur, Hyderabad, Telangana" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="5dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="14dp"
                android:textColor="#bab8b8"
                android:text="Destination" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"

                android:paddingLeft="@dimen/activity_horizontal_margin"

                android:textSize="14dp"
                android:textColor="#000"
                android:text="Brisa Marina, Near Goa Science Center, Miramar, Panjim, Goa" />


        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:elevation="3dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            tools:context="fourthyninetons.multilanguage.SummaryActivity">

            <TextView
                android:layout_width="match_parent"
                android:background="#ADD8E6"

                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15dp"
                android:text="Vehicle Type"
                android:drawableRight="@mipmap/truck_delivery" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Medium Commercial Vehicle" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:elevation="3dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            tools:context="fourthyninetons.multilanguage.SummaryActivity">

            <TextView
                android:layout_width="match_parent"
                android:background="#ADD8E6"

                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15dp"
                android:text="Material &amp; Volume"
                android:drawableRight="@mipmap/package_variant_closed" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="FMCG - Soaps, Detergents" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="130 Boxes" />
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_marginLeft="@dimen/activity_horizontal_margin"
        android:layout_marginRight="8dp"
        android:layout_marginTop="5dp"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:cardCornerRadius="3dp"
        android:elevation="3dp">

        <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:orientation="vertical"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            xmlns:app="http://schemas.android.com/apk/res-auto"

            tools:context="fourthyninetons.multilanguage.SummaryActivity">

            <TextView
                android:layout_width="match_parent"
                android:background="#ADD8E6"

                android:layout_height="wrap_content"
                android:padding="8dp"
                android:textSize="15dp"
                android:text="Pickup Time"
                android:drawableRight="@mipmap/calendar_clock" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@android:color/darker_gray" />


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:textSize="14dp"
                android:textColor="#000"
                android:text="Monday, 23 May 2016 - 01:30 PM" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

